html, body, iframe
  margin    0
  padding   0
  width     100%
  height    100%
  overflow  hidden
  position  absolute
  border    none
  left      0
  top       0
  background-color black

body
  background-color black
  -webkit-perspective 1000px

iframe
  -webkit-transform-origin 0 0 0
  transition opacity 1s ease

w = 80px
.quad
  position absolute
  width w
  height w
  margin-left -(w/2)
  margin-top -(w/2)
  left 0
  top 0
  border-radius (w/2)
  &:hover
    background-color rgba(0,0,255, 0.6)

#paperjs-canvas
  width 100%
  height 100%
  background-color black//#1b253d
  &.off
    opacity 0
  &.on
    opacity 1

#curtain
  width 100%
  height 0
  position absolute
  z-index 999
  background-color white
  transition height 3s cubic-bezier(0.875, 0.155, 0.535, 0.985), opacity 2s
  &.down
    height 100%
  &.off
    opacity 0

p.instruction
  font-size   0.8em
  position    absolute
  z-index     2
  left        1em
  white-space pre