html, body
  margin    0
  padding   0
  width     100%
  height    100%
  overflow  hidden
  background-color black

body
  background-color black
  -webkit-perspective 1000px

#paperjs-canvas
  width 100%
  height 100%
  background-color black//#1b253d
  -webkit-transform-origin 0 0 0
  // -webkit-transform rotateY(35deg)
  // -webkit-transform rotateX(-35deg)
  transition opacity 1s ease
  &.end
    opacity 0

#curtain
  width 100%
  height 0
  position absolute
  background-color white
  transition height 2s ease, opacity 2s
  &.down
    height 100%
  &.off
    opacity 0

p.instruction
  font-size   0.8em
  position    absolute
  z-index     2
  left        1em
  white-space pre